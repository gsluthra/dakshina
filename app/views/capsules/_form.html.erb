<% if @capsule.errors.any? %>
    <div id="error_explanation" style="color: red">
      <%= pluralize(@capsule.errors.count, "error") %> prohibited
      this capsule from being saved:
      <ul>
        <% @capsule.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
<% end %>


<%= form_for @capsule do |f| %>

    <p>
      <%= f.label "Name" %><br>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :description %><br>
      <%= f.text_area :description, size: "60x2" %>
    </p>

    <p>
      <h3> Study Material</h3>
    </p>

    <p>
      <%= f.label "Reading Text" %><br>
      <%= f.text_area :study_text, size: "100x10" %>
    </p>

    <p>
    <h3> Assignment for Student </h3>
    </p>

    <p>
      <%= f.text_area :assignment_instructions, size: "100x3" %>
    </p>

    <p>
    <h3> Guidelines for Evaluators </h3>
    </p>

    <p>
      <%= f.text_area :guidelines_for_evaluators, size: "100x3" %>
    </p>

    <p>
      <%= f.submit %>
    </p>

<% end %>
