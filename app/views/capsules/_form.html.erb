<%= render 'common/errorMessage', passedErrors: @capsule.errors %>

<%= form_for @capsule do |f| %>

    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Capsule Details</h3>
      </div>
      <div class="panel-body">
        <p>
          <%= f.label "Name" %><br>
          <%= f.text_field :title %>
        </p>

        <p>
          <%= f.label :description %><br>
          <%= f.text_area :description, size: "120x2" %>
        </p>
      </div>
    </div>

    <div class="panel panel-success">
      <div class="panel-heading">
        <h3 class="panel-title">Study Material</h3>
      </div>
      <div class="panel-body">
        <%= f.label "Reading Text" %>
        <br>
        <%= f.text_area :study_text, size: "120x10" %>
      </div>
    </div>

    <div class="panel panel-success">
      <div class="panel-heading">
        <h3 class="panel-title"> Assignment for Student </h3>
      </div>
      <div class="panel-body">
        <%= f.text_area :assignment_instructions, size: "120x3" %>
      </div>
    </div>

    <div class="panel panel-success">
      <div class="panel-heading">
        <h3 class="panel-title"> Guidelines for Evaluators</h3>
      </div>
      <div class="panel-body">
        <%= f.text_area :guidelines_for_evaluators, size: "120x3" %>
      </div>
    </div>


    <div align="left">
      <p>
        <%= link_to '< Back', @capsule, :class=> "btn btn-primary" %>
        <%= f.submit 'Save Capsule', :class => 'btn btn-warning' %>
      </p>
    </div>

<% end %>
